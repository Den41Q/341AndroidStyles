<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BlackTheme" parent="AppTheme" >
        <item name="android:colorBackground">@android:color/darker_gray</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="GreenTheme" parent="AppTheme" >
        <item name="android:colorBackground">@android:color/holo_green_dark</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorPrimaryInverse">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:textColorSecondaryInverse">@android:color/black</item>
        <item name="android:colorForeground">@color/abc_search_url_text</item>
    </style>

    <style name="BlueTheme" parent="AppTheme" >
        <item name="android:colorBackground">@android:color/holo_blue_dark</item>
        <item name="android:textColorPrimary">@android:color/holo_red_dark</item>
        <item name="android:textColorPrimaryInverse">@android:color/holo_red_dark</item>
        <item name="android:textColorSecondary">@android:color/holo_red_dark</item>
        <item name="android:textColorSecondaryInverse">@android:color/holo_red_dark</item>
        <item name="android:colorForeground">@android:color/holo_red_dark</item>
    </style>

</resources>


